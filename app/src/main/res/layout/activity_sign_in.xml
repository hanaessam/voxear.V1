<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-27dp"
        android:layout_margin="20dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@id/logo"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_black" />

        <TextView
            android:id="@+id/vosear_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:text="VOXEAR"
            android:textAllCaps="true"
            android:textColor="#232931"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signUpSalah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vosear_signin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="false"
            android:gravity="center"
            android:text="Sign In"
            android:textAllCaps="true"
            android:textColor="#232931"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpSalah"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text=" Enter your e-mail:"
            android:textColor="#808080"
            android:textSize="15sp"
            app:drawableLeftCompat="@drawable/ic_baseline_email_24" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailenter"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field"
            android:hint="Email address"

            android:inputType="textEmailAddress"
            android:textColor="#808080" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmationText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/field"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="#808080" />

        <TextView
            android:id="@+id/confirmationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTextEmailAddress"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:text=" Password:"
            android:textColor="#808080"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTextPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Sign In"
            android:textSize="20sp"
            android:background="@drawable/custom_button"
            />
        <TextView
            android:id="@+id/donthaveanaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSignIn"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:text="Don't have an account? Sign up now!:"
            android:textColor="#808080"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donthaveanaccount"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Sign Up"
            android:textSize="20sp"
            android:background="@drawable/custom_button"
            />




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>